<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/stylesheets/profile.css">
</head>

<body>
    <% if (success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= success[0] %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% } %>
      
      <% if (error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error[0] %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% } %>
    <div class="container mt-5">
        <div class="row">
            <!-- Left Column -->
            <div class="col-md-4">
                <div class="profile-card">
                    <img src="/images/ABBYS_Z.png" alt="Profile" class="profile-pic" />
                    <h5 class="mt-2">@ <%=user.username %>
                    </h5>
                    <p>Saran, Bihar</p>

                    <form action="/upload" method="POST" enctype="multipart/form-data">
                        <input type="text" class="form-control mb-2" placeholder="Post Caption" name="postText" />
                        <input type="file" class="form-control-file" name="file" />
                        <button type="submit" class="btn btn-primary btn-sm">Upload</button>
                    </form>

                    <hr />
                    <a href="/feed" class="d-block mt-2">Home</a>
                    <a href="/logout" class="d-block">Logout</a>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-8">
                <div class="info-card">
                    <h5 class="mb-4">Profile Information</h5>
                    <p><strong>Name:</strong>
                        <%= user.fullname %>
                    </p>
                    <p><strong>Email Address:</strong>
                        <%= user.email %>
                    </p>
                    <p><strong>Date of Birth:</strong> 20-03-2007</p>
                    <p><strong>Gender:</strong> Male</p>
                    <p><strong>City:</strong> Saran, Bihar</p>
                    <p><strong>Preference:</strong> One Piece</p>
                    <p><strong>Role:</strong> User</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <div class="row">
          <% user.posts.forEach(function(post){ %>
            <div class="col-md-4 mb-4 d-flex align-items-stretch">
              <div class="card w-100">
                <img src="/images/uploads/<%= post.image %>" class="card-img-top" alt="Post Image">
                <div class="card-body">
                  <h5 class="card-title"><%= post.postText %></h5>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>

    


    <!-- Bootstrap Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>